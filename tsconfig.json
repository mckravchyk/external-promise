{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "lib": ["es2018"],
    "moduleResolution": "bundler",
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true,
    "baseUrl": "./",
  },
  "include": [
    "./src",
    "./test",
  ],
}
